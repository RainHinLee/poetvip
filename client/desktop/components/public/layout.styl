html
body
	width 100%
	height 100%
	overflow hidden
	font-size 14px
	color $color-font
	letter-spacing 1px
	*
		padding 0px
		margin 0px
		list-style none
		box-sizing border-box
#app
	position relative
	width 100%
	height 100%
	overflow auto
a
	text-decoration none
	

.is-btn
	width 100%
	height 100%
	border none
	outline none
	border-radius 3px
	display inline-flex
	align-items center
	justify-content center
	text-decoration none
	cursor pointer
	background transparent
	border none
	transition 150ms 
	color $color-font
	&:hover
		background $color-border
		color $color-block
	&.is-success
		background $color-success
		color $color-white
		&:hover
			opacity 0.8


//---transition 动画
.fade-enter
.fade-leave-to
	opacity 0
.fade-enter-active
.fade-leave-active
	transition 300ms
.fade-enter-to
.fade-leave
	opacity 1
	
//--字体文件


@font-face
	font-family '启功字体'
	src url('/public/statics/fonts/印品篆体.ttf')


//--常用动画
@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1	
 
//--常用动画
@keyframes slideInTop
	0%
		transform translateY(-100%)
	100%
		transform translateY(0)
		
//--常用动画
@keyframes fadeInTop
	0%
		transform translateY(-30px)
		opacity 0
	100%
		transform translateY(0)		
		opacity 1

//---动画 alert,confirm弹出动画
@keyframes dialogIn
	0%
		transform scale(0)
		opacity 0
	60%
		transform scale(1.1)
		opacity 1
	100%
		transform scale(1.0)
		opacity 1