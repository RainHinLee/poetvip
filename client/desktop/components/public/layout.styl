html
body
	width 100%
	height 100%
	overflow hidden
	font-size 14px
	color $color-font
	letter-spacing 1px
	*
		padding 0px
		margin 0px
		list-style none
		box-sizing border-box
#app
	position relative
	width 100%
	height 100%
	overflow auto
a
	text-decoration none


//---transition 动画
.fade-enter
.fade-leave-to
	opacity 0
.fade-enter-active
.fade-leave-active
	transition 300ms
.fade-enter-to
.fade-leave
	opacity 1
	
//--字体文件


@font-face
	font-family '为你心动'
	src url('/public/statics/fonts/汉仪游园.ttf')




//--常用动画
@keyframes fadeIn
	0%
		opacity 0
	100%
		opacity 1	
 
//--常用动画
@keyframes slideInTop
	0%
		transform translateY(-100%)
	100%
		transform translateY(0)
//---动画 alert,confirm弹出动画
@keyframes dialogIn
	0%
		transform scale(0)
		opacity 0
	60%
		transform scale(1.1)
		opacity 1
	100%
		transform scale(1.0)
		opacity 1